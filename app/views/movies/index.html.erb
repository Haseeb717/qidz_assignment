

<div class="container">
  <h1>Movies</h1>

  <%= form_tag root_path, :controller => 'moves', :action => 'index', :method => 'get' do %>
    <div class="form-group">
      <%= text_field_tag :search,@search,:placeholder=>"Search Actor Movie",:class=>"form-control",:id=>"search" %>   
    </div>
  <% end %>
 
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Year</th>
        <th>Director</th>
        <th>Actor</th>
        <th>Filming location</th>
        <th>Country</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.name %></td>
          <td><%= movie.description %></td>
          <td><%= movie.year %></td>
          <td><%= movie.director %></td>
          <td><%= movie.actor %></td>
          <td><%= movie.filming_location %></td>
          <td><%= movie.country %></td>
          <td><%= link_to 'Show', movie_path(movie.id),:class=>"btn btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $('#search').keypress(function(e){
    if(e.which == 13){
      $(this).closest('form').submit();
    }
  });
</script>