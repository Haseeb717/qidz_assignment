

<div class="container">
  <h1><%= @movie.name %></h1>
 
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Year</th>
        <th>Director</th>
        <th>Actor</th>
        <th>Filming location</th>
        <th>Country</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @movie.name %></td>
          <td><%= @movie.description %></td>
          <td><%= @movie.year %></td>
          <td><%= @movie.director %></td>
          <td><%= @movie.actor %></td>
          <td><%= @movie.filming_location %></td>
          <td><%= @movie.country %></td>
        </tr>
    </tbody>
  </table>
</div>


<div class="container">
  <h3>Reviews List</h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Username</th>
        <th>Rating</th>
        <th>Comment</th>
      </tr>
    </thead>
    <tbody>
      <% @movie.reviews.each do |rating| %>
        <tr>
          <td><%= rating.username %></td>
          <td><%= rating.rating %></td>
          <td><%= rating.comment %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
